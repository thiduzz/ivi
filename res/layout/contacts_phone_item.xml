<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/contactItem"
    android:layout_gravity="center_vertical" >
    <ImageView
        android:id="@+id/imageType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:src="@drawable/cellphone"
        android:layout_centerVertical="true"/>
    
	<TextView 
	    android:id="@+id/contactValueItem"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dp"
	    android:textColor="@color/CinzaEscuro"
	    android:layout_toRightOf="@+id/imageType"
	    android:ellipsize="end"
	    android:text="99913738"
	    android:maxLength="28"
        android:layout_centerVertical="true"
	    android:textStyle="bold"
	    android:textSize="18dp"/>
	
		<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|right">
	<CheckBox
	    android:id="@+id/addCheck"
	    android:layout_toRightOf="@+id/contactValueItem"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
	    android:checked="true" />
	</RelativeLayout>
</RelativeLayout>